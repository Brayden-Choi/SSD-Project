@page
@using MIST.Models
@model MIST.Pages.ShoppingCart.IndexModel


@{
    ViewData["Title"] = "Shopping Cart";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ShoppingCartItem[0].Game)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.ShoppingCartItem)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Game.ID)
                </td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@item.ShoppingCartId">Edit</a> |
                    <a asp-page="./Details" asp-route-id="@item.ShoppingCartId">Details</a> |
                    <a asp-page="./Delete" asp-route-id="@item.ShoppingCartId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
