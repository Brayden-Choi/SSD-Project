@page
@model MIST.Pages.ShoppingCart.DeleteModel

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}
<head>
    <style>
        h1, h3, dt, dd {
            color: white;
        }
        body{
            background-color: black;
        }
    </style>
</head>
<h1>Delete</h1>
<body>
<h3>Are you sure you want to delete this item?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ShoppingCartItem.Game):
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ShoppingCartItem.Game.Name)
        </dd>
    </dl>

    <form method="post">
        <input type="hidden" asp-for="ShoppingCartItem.ShoppingCartId" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-page="./Index">Back to List</a>
    </form>
</div>
</body>
