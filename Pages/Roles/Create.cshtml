@page
@model MIST.Pages.Roles.CreateModel
@{
    ViewData["Title"] = "Create";
}
<head>
    <style>
        body {
            background-color: black;
        }

        h2, label, td{
            color: white;
        }
    </style>
</head>

<body>
    <h2>Create Role</h2>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="ApplicationRole.Name" class="control-label"></label>
                    <input asp-for="ApplicationRole.Name" class="form-control" pattern="[A-Za-z0-9]+" />
                    <span asp-validation-for="ApplicationRole.Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ApplicationRole.Description" class="control-label"></label>
                    <input asp-for="ApplicationRole.Description" class="form-control" pattern="[A-Za-z0-9]+" />
                    <span asp-validation-for="ApplicationRole.Description" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Create" class="btn-primary btn" />
                </div>
            </form>
        </div>
    </div>
<div>
    <a asp-page="Index">Back to List</a>
</div>
</body>
    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }

