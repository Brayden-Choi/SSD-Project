            @Html.DisplayFor(model => model.Game.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Game.MediaName)
        </dt>
        <dd class="col-sm-10">
            <img src="~/uploads/@Model.Game.MediaName" />
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Game.ReleaseDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Game.ReleaseDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Game.Genre)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Game.Genre)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Game.FileType)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Game.FileType)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Game.Device)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Game.Device)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Game.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Game.Description)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Game.Developer)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Game.Developer)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Game.Publisher)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Game.Publisher)
        </dd>
